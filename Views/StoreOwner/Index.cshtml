@model BookListViewModel

<!-- Add the following script to show modal on error -->


<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
    <div class="container">
        <h1 class="page-title">All<span>Books</span></h1>
    </div><!-- End .container -->
</div><!-- End .page-header -->
<nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page">List</li>
        </ol>
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->

<div class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="toolbox">
                    <div class="toolbox-left">
                        <div class="toolbox-info">
                            Showing <span>@Model?.Books.Count() of @Model?.PagingInfo?.TotalItems</span>
                            Books
                        </div><!-- End .toolbox-info -->

                        <a style="cursor: pointer;" class="btn btn-info ml-4" asp-controller="StoreOwner"
                            asp-action="Create" role="button">
                            <i class="bi bi-plus-circle-fill"></i>
                            <span>Add new book</span>
                        </a>


                    </div><!-- End .toolbox-left -->

                    <div class="toolbox-right">
                        <div class="toolbox-sort">
                            <label for="sortby">Sort by:</label>
                            <div class="select-custom">
                                <form name="sortby-form" asp-controller="StoreOwner" asp-action="Index"
                                    asp-route-categoryId="@Model?.CurrentCategoryId"
                                    asp-route-bookPage="@Model?.PagingInfo?.CurrentPage"
                                    asp-route-sortby="@Model?.CurrentSortby">
                                    <select name="sortby" id="sortby" class="form-control">
                                        <option value="Name" selected="@(Model?.CurrentSortby! == " Name")">Name
                                        </option>
                                        <option value="Year" selected="@(Model?.CurrentSortby! == " Year")">Year
                                        </option>
                                        <option value="Id" selected="@(Model?.CurrentSortby! == " Id")">Id</option>
                                    </select>
                                </form>
                            </div>
                        </div><!-- End .toolbox-sort -->

                    </div><!-- End .toolbox-right -->
                </div><!-- End .toolbox -->
                @foreach (var b in Model?.Books ?? Enumerable.Empty<Book>())
                    {
                    <div class="products mb-3">
                        <div class="product product-list">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <figure class="product-media">
                                        <span class="product-label label-new">New</span>
                                        <a href="product.html">
                                            <img src="assets/images/products/product-4.jpg" alt="Product image"
                                                class="product-image">
                                        </a>
                                    </figure><!-- End .product-media -->
                                </div><!-- End .col-sm-6 col-lg-3 -->

                                <div class="col-6 col-lg-3 order-lg-last">
                                    <div class="product-list-action">
                                        <div class="product-price font-weight-bold justify-content-center">
                                            $@b.FinalPrice
                                        </div><!-- End .product-price -->

                                        <div class="product-action justify-content-center">
                                            <p class="btn-product btn-quickview" title="Quick view">
                                                <span class="text-nowrap" style="font-size: 1.4rem;">Published
                                                    <b>@b.YearPublished</b></span>
                                            </p>
                                        </div><!-- End .product-action -->

                                        <div class="d-flex">
                                            <a asp-controller="StoreOwner" asp-action="Edit" asp-route-bookId="@b.Id"
                                                class="btn-product btn-crud btn-edit mr-2" role="button">
                                                <span>Edit</span>
                                            </a>
                                            <a asp-controller="StoreOwner" asp-action="Delete" asp-route-bookID="@b.Id"
                                                class="btn-product btn-crud btn-delete" data-toggle="modal"
                                                data-target="#delete-@b.Id" role="button">
                                                <span>Delete</span>
                                            </a>

                                        </div>
                                    </div><!-- End .product-list-action -->
                                </div><!-- End .col-sm-6 col-lg-3 -->

                                <div class="col-lg-6">
                                    <div class="product-body product-action-inner">
                                        <h3 class="product-title text-danger mb-1" style="font-size: large;"><a
                                                href="product.html">@b.Title</a></h3><!-- End .product-title -->
                                        <!-- End .product-cat -->
                                        <div class="product-cat mb-1" style="color: #ef837b;">
                                            <a href="#"><i class="bi bi-tag-fill"> Category: </i>
                                                @b.Category?.CategoryName</a>
                                        </div>

                                        <a href="#" class="product-author mb-1">
                                            <i class="bi bi-people-fill"> Author: @b.Author</i>
                                        </a>
                                        <div class="product-content mb-0">
                                            <p class="mb-1">Lorem ipsum dolor sit amet, consectetuer adipiscingelit.
                                                Phasellus hendrerit. Pellentesque </p>
                                        </div><!-- End .product-content -->
                                    </div><!-- End .product-body -->
                                </div><!-- End .col-lg-6 -->
                            </div><!-- End .row -->
                        </div><!-- End .product -->
                    </div>

                    <div class="modal fade" id="delete-@b.Id" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Are you sure to delete this product?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <a type="button" asp-controller="StoreOwner" asp-action="Delete"
                                        asp-route-bookID="@b.Id" class="btn btn-info">Yes</a>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    <!-- End .products -->


                    <!--Pagination link-->
                    <nav aria-label="Page navigation" page-model="@Model?.PagingInfo" page-action="Index"
                        page-url-sortby="@Model?.CurrentSortby!" page-url-categoryId="@Model?.CurrentCategoryId!"></nav>
            </div><!-- End .col-lg-9 -->


            <aside class="col-lg-3 order-lg-first">
                <div class="sidebar sidebar-shop">
                    <div class="widget widget-clean">
                        <label>Filters:</label>
                        <a asp-controller="StoreOwner" asp-action="Index" class="sidebar-filter-clear">Clean All</a>
                    </div><!-- End .widget widget-clean -->

                    <div class="widget widget-collapsible">
                        <h3 class="widget-title">
                            <a data-toggle="collapse" href="#widget-1" role="button" aria-expanded="true"
                                aria-controls="widget-1">
                                Category
                            </a>
                        </h3><!-- End .widget-title -->

                        <div class="collapse show" id="widget-1">
                            <div class="widget-body">
                                <div class="filter-items filter-items-count">
                                    @foreach (Category c in Model?.Categories ?? Enumerable.Empty<Category>())
                                        {
                                        <div class="filter-item">
                                            <div class="custom-control custom-checkbox">
                                                <form asp-controller="StoreOwner" asp-action="Index"
                                                    asp-route-categoryId="@c.Id"
                                                    asp-route-sortby="@Model?.CurrentSortby">
                                                    <input @(c.Id==Model?.CurrentCategoryId ? "checked" : "" )
                                                        type="checkbox" class="custom-control-input" id="cat-@c.Id"
                                                        data-auto-submit>
                                                    <label class="custom-control-label"
                                                        for="cat-@c.Id">@c.CategoryName</label>
                                                </form>
                                            </div><!-- End .custom-checkbox -->
                                            <span class="item-count">@c.Books?.Count()</span>
                                        </div>
                                        }
                                </div><!-- End .filter-items -->
                            </div><!-- End .widget-body -->
                            <a asp-controller="ControllerName" asp-action="ActionName" class="btn btn-warning ml-4"
                                role="button">
                                <i class="bi bi-plus-circle-fill"></i>
                                <span>Request new category</span>
                            </a>
                        </div><!-- End .collapse -->
                    </div><!-- End .widget -->
                </div><!-- End .sidebar sidebar-shop -->
            </aside><!-- End .col-lg-3 -->
        </div><!-- End .row -->
    </div><!-- End .container -->
</div><!-- End .page-content -->