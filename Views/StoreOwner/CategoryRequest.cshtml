@model CategoryRequest
<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
    style="background-image: url('/assets/images/backgrounds/login-bg.jpg')">
    <div class="container">
        <div class="form-box">
            <div class="form-tab">
                <ul class="nav nav-pills nav-fill" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" role="tab">Request Category</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">
                        <form asp-controller="StoreOwner" asp-action="CategoryRequest" method="POST"
                            enctype="multipart/form-data">
                            <div class="input-group input-group-lg mt-1 mb-2">
                                <div class="input-group-prepend">
                                    <label asp-for="CategoryName"
                                        class="input-group-text bg-primary text-white input-group-elements-lg"><i
                                            class="bi bi-bookmark-check"> Category Name</i></label>
                                </div>
                                <input asp-for="CategoryName" type="text" class="form-control input-group-elements-lg "
                                    placeholder="Enter title" required>
                                <span asp-validation-for="CategoryName"
                                    class="invalid-feedback custom-invalid-feedback">
                                </span>
                            </div>



                            <div class=" input-group input-group-lg mt-1 mb-2">
                                <div class="input-group-prepend">
                                    <label asp-for="Description"
                                        class="input-group-text bg-primary text-white input-group-elements-lg"><i
                                            class="bi bi-bookmark-check"> Description</i> </label>
                                </div>
                                <textarea asp-for="Description" type="text" class="form-control input-group-elements-lg"
                                    required></textarea>
                                <span asp-validation-for="Description" class="invalid-feedback custom-invalid-feedback">
                                </span>
                            </div>

                            <!-- End .form-group -->
                            <div class="form-footer row justify-content-end">
                                <button type="submit" class="btn btn-outline-info">
                                    <span>Submit</span>
                                </button>
                                <button aria-label="Close" class="btn btn-outline-danger">
                                    <span>Close</span>
                                </button>
                            </div>
                            <!-- End .form-footer -->
                        </form>
                    </div>
                    <!-- .End .tab-pane -->
                </div>
                <!-- End .tab-content -->
            </div>
            <!-- End .form-tab -->
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

