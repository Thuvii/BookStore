    <div class="bestseller-products bg-light pt-5 pb-5 mb-5">
        <div class="block">
            <div class="block-wrapper ">
                <div class="container">
                    <div class="heading heading-flex">
                        <div class="heading-left">
                            <h2 class="title">Bestsellers</h2><!-- End .title -->
                        </div><!-- End .heading-left -->
                        <div class="heading-right">
                            <a href="category.html" class="title-link">View more Products <i
                                    class="icon-long-arrow-right"></i></a>
                        </div><!-- End .heading-right -->
                    </div><!-- End .header-flex -->
                    <div class="owl-carousel carousel-equal-height owl-simple" data-toggle="owl" data-owl-options='{
                                        "nav": false,
                                        "dots": true,
                                        "margin": 20,
                                        "loop": false,
                                        "responsive": {
                                            "0": {
                                                "items":2
                                            },
                                            "480": {
                                                "items":2
                                            },
                                            "768": {
                                                "items":3
                                            },
                                            "992": {
                                                "items":4
                                            },
                                            "1440": {
                                                "items":5
                                            }
                                        }
                                    }'>
                        @foreach (var b in Model ?? Enumerable.Empty<Book>())
                        {
                            <div class="product">
                                <span class="product-label label-sale">Sale</span>
                                <figure class="product-media">
                                    <a asp-controller="Book" asp-action="Detail" asp-route-bookId="@b.Id">
                                        <img style="width: auto; height: 29rem;" src="~/upload/images/@b.ImageUrl"
                                            alt="Product image" class="product-image">
                                    </a>
                                </figure><!-- End .product-media -->
                                <div class="product-body">
                                    <div class="product-cat">
                                        by <a href="">@b.Author</a>
                                    </div><!-- End .product-cat -->
                                    <h3 class="product-title"><a asp-controller="Book" asp-action="Detail"
                                            asp-route-bookId="@b.Id">@b.Title</a></h3>
                                    <!-- End .product-title -->
                                    <div class="product-price">
                                        <span class="new-price">$@b.Price</span>
                                    </div><!-- End .product-price -->
                                    <div class="product-footer">
                                        <div class="product-action">
                                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-bookID="@b.Id"
                                                class="btn-product btn-cart"><span>add to cart</span></a>
                                        </div><!-- End .product-action -->
                                    </div><!-- End .product-footer -->
                                </div><!-- End .product-body -->
                            </div>

                            <!-- End .product -->
                        }
                    </div><!-- End .owl-carousel -->
                </div><!-- End .container -->
            </div><!-- End .block-wrapper -->
        </div><!-- End .block -->
    </div><!-- End .bg-light pt-4 pb-4 -->

