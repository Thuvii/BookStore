@model Register


@{
        ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
        <div class="col-12">
        <form asp-controller="Admin" asp-action="Create" method="post">
                        <div class="form-group">
                                <label asp-for="Email">Your email address *</label>
                                <input type="email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="invalid-feedback custom-invalid-feedback">
                                </span>
                        </div><!-- End .form-group -->
                        <div class="form-group">
                                <label asp-for="FullName"></label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName"
                                        class="invalid-feedback custom-invalid-feedback"></span>
                        </div>
                        <div class="form-group">
                                <label asp-for="HomeAddress"></label>
                                <input asp-for="HomeAddress" class="form-control" />
                                <span asp-validation-for="HomeAddress"
                                        class="invalid-feedback custom-invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="invalid-feedback custom-invalid-feedback">
                                </span>
                        </div>

                        <div class="form-group">
                                <button class="btn btn-primary mt-2">Submit</button>
                        </div>
                </form>
        </div>
</div>

<div>
        <a asp-action="Customer">Back to List</a>
</div>