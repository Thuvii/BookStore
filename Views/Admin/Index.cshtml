@model List<User>





<div class="container-fluid py-5">
        <div class="text-center wow fadeInUp row justify-content-between" data-wow-delay="0.1s">
                <div class="col-md-3">
                        <a class="text-white btn btn-primary rounded-pill d-inline m-1">Welcome Admin</a>
                </div>
                <div class="col-md-3">
                        <h6 class="section-title bg-white text-center text-primary px-3">
                                Admin
                        </h6>
                        <h1 class="mb-4">@ViewBag.Header Manage</h1>
                </div>
                <div class="col-md-3">
                        <a asp-action="Create" class="btn btn-primary rounded-pill d-inline m-1"><i
                                        class="bi bi-plus-circle"> Add new user</i></a>
                </div>

                <table class="table table-striped  mb-0 bg-white mt-3">
                        <thead class="bg-light thead-dark text-center fs-5">
                                <tr>
                                        <th><i class="bi bi-list-ol"></i></i> #</th>
                                        <th><i class="bi bi-person-circle"></i> Customer Name</th>
                                        <th><i class="bi bi-house"></i></i>HomeAddress</th>
                                        <th><i class="bi bi-envelope-at-fill"></i> Email</th>
                                        <th>Edit</th>

                                </tr>
                        </thead>
                        <tbody class="text-center">
                                @if (Model != null && Model.Count > 0)
                                {
                                        var i = 0;
                                        @foreach (var user in Model)
                                        {
                                                i++;
                                                <tr>
                                                        <td>
                                                                <span class="btn btn-primary rounded-pill d-inline m-1">@i</span>
                                                        </td>
                                                        <td>
                                                                <span
                                                                        class="btn btn-primary rounded-pill d-inline m-1">@user.FullName</span>
                                                        </td>
                                                        <td>
                                                                <span
                                                                        class="btn btn-primary rounded-pill d-inline m-1">@user.HomeAddress</span>
                                                        </td>
                                                        <td>
                                                                <span
                                                                        class="btn btn-primary rounded-pill d-inline m-1">@user.Email</span>
                                                        </td>
                                                        <td>
                                                                <a class="btn btn-sm btn-warning" asp-controller="Admin"
                                                                        asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                                                <a class="btn btn-sm btn-danger" asp-controller="Admin"
                                                                        asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                                                        </td>
                                                </tr>


                                        }
                                }
                        </tbody>
                </table>

        </div>
</div>