@model List<BookStore.Models.Book>

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.FinalPrice.ToString("C")</td>
                <td>
                    <a href="@Url.Action("RemoveFromCart", new { bookId = book.Id })">Remove</a>
                </td>
            </tr>
        }
    </table>
}

<a href="@Url.Action("Index", "Home")">Continue Shopping</a>